<?xml version="1.0"?>
<ruleset>
    <!-- display progress -->
    <arg value="p"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12">
        <!-- Ignore line length rule -->
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Paths to check -->
    <file>src</file>
</ruleset>
